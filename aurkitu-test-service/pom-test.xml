<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <artifactId>aurkitu-test-service</artifactId>
    <packaging>jar</packaging>

    <name>Aurkitu Test Service</name>
    <description>Test project to create a schema and also test dependency scanning.This POM is used to execute the
        plugin as an integration test.
    </description>

    <parent>
        <groupId>com.michaelhradek</groupId>
        <artifactId>aurkitu-parent</artifactId>
        <version>0.0.6.2</version>
        <relativePath>..</relativePath>
    </parent>

    <dependencies>
        <dependency>
            <groupId>com.michaelhradek</groupId>
            <artifactId>aurkitu-test-dependency</artifactId>
            <version>${aurkitu.version}</version>
        </dependency>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <version>${lombok.version}</version>
        </dependency>
        <dependency>
            <groupId>com.michaelhradek</groupId>
            <artifactId>aurkitu-annotations</artifactId>
            <version>${aurkitu.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>com.michaelhradek</groupId>
                <artifactId>aurkitu-maven-plugin</artifactId>
                <version>${aurkitu.version}</version>
                <executions>
                    <execution>
                        <id>execution-generic</id>
                        <phase>process-classes</phase>
                        <goals>
                            <goal>build-schema</goal>
                        </goals>
                        <configuration>
                            <schemaName>test-service-consolidated</schemaName>
                            <schemaNamespace>com.michaelhradek.aurkitu.test.flatbuffers</schemaNamespace>
                            <consolidatedSchemas>true</consolidatedSchemas>
                            <useSchemaCaching>false</useSchemaCaching>
                            <validateSchema>true</validateSchema>
                            <specifiedDependencies>
                                <dependency>com.michaelhradek</dependency>
                            </specifiedDependencies>
                        </configuration>
                    </execution>
                    <execution>
                        <id>execution-unconsolidated</id>
                        <phase>process-classes</phase>
                        <goals>
                            <goal>build-schema</goal>
                        </goals>
                        <configuration>
                            <schemaName>test-service-seperated</schemaName>
                            <schemaNamespace>com.michaelhradek.aurkitu.test.flatbuffers</schemaNamespace>
                            <consolidatedSchemas>false</consolidatedSchemas>
                            <useSchemaCaching>false</useSchemaCaching>
                            <validateSchema>true</validateSchema>
                            <specifiedDependencies>
                                <dependency>com.michaelhradek</dependency>
                            </specifiedDependencies>
                        </configuration>
                    </execution>
                    <execution>
                        <id>execution-sepcific-dependencies</id>
                        <phase>process-classes</phase>
                        <goals>
                            <goal>build-schema</goal>
                        </goals>
                        <configuration>
                            <schemaName>test-service-specific-dependencies</schemaName>
                            <schemaNamespace>com.michaelhradek.aurkitu.test.flatbuffers</schemaNamespace>
                            <consolidatedSchemas>true</consolidatedSchemas>
                            <useSchemaCaching>false</useSchemaCaching>
                            <validateSchema>true</validateSchema>
                            <specifiedDependencies>
                                <dependency>com.michaelhradek:aurkitu-test-dependency</dependency>
                            </specifiedDependencies>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>